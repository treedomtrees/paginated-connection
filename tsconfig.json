{
    "compilerOptions": {
      "lib": ["es2022"],
      "module": "node16",
      "target": "es2022",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node16",
      "outDir": "lib",
      "rootDir": "src",
      "declaration": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "test"]
  }